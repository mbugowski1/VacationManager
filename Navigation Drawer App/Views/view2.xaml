                    Grid.Column="1"
                    HorizontalContentAlignment="Center">
            <ListViewItem>
                <Button Height="100"
                        Width="200" Cursor="Hand">
                    <TextBlock TextWrapping="Wrap"
                             TextAlignment="Center"
                             Text="Wniosek o urlop z dnia "></TextBlock>
                </Button>
            </ListViewItem>
            <ListViewItem>
                <Button Height="100"
                        Width="200" Cursor="Hand">
                    <TextBlock TextWrapping="Wrap"
                             TextAlignment="Center"
                             Text="Wniosek o urlop z dnia "></TextBlock>
                </Button>
            </ListViewItem>
            <ListViewItem>
                <Button Height="100"
                        Width="200">
                    <TextBlock TextWrapping="Wrap"
                             TextAlignment="Center"
                             Text="Wniosek o urlop z dnia "></TextBlock>
                </Button>
            </ListViewItem>
            <ListViewItem>
                <Button Height="100"
                        Width="200">
                    <TextBlock TextWrapping="Wrap"
                             TextAlignment="Center"
                             Text="Wniosek o urlop  z dnia "></TextBlock>
